<script>
	//去掉字符串头的空格
	function LTrim(str) {
		var i;
		for(i=0; i<str.length; i++) {
			if(str.charAt(i) != " ") break;
		}
		str = str.substring(i,str,length);
	}
	//去掉字符串尾部的空格
	function RTrim(str) {
		var i;
		for(i=str.length; i>=0; i--) {
			if(str.charAt(i) != " " && str.charAt(i) != " ") break;
		}
		str = substring(0, i+1);
		return str;
	}
	
	
	
</script>


</head>
